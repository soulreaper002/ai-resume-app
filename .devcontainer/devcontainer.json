{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",

  // Add Docker run arguments to increase inotify limits
  "runArgs": [
    "--sysctl", "fs.inotify.max_user_watches=524288",
    "--sysctl", "fs.inotify.max_user_instances=1024"
  ],

  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  "updateContentCommand": "[ -f packages.txt ] && sudo apt update && sudo apt upgrade -y && sudo xargs apt install -y <packages.txt; [ -f requirements.txt ] && pip3 install --user -r requirements.txt; pip3 install --user streamlit; echo 'âœ… Packages installed and Requirements met'",

  // Optional: also set inside container for good measure
  "postCreateCommand": "sudo sysctl -w fs.inotify.max_user_watches=524288 fs.inotify.max_user_instances=1024",

  "postAttachCommand": {
    "server": "streamlit run app.py --server.enableCORS false --server.enableXsrfProtection false"
  },

  "portsAttributes": {
    "8501": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },

  "forwardPorts": [
    8501
  ]
}
